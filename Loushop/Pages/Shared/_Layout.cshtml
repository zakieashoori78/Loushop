<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Local Bootstrap RTL CSS -->
    <link href="~/lib/bootstrap4/css/bootstrap-rtl.css" rel="stylesheet" />
    <!-- Local Sahel Font -->
    <link href="https://cdn.rawgit.com/rastikerdar/sahel-font/v1.0.0-alpha23/dist/font-face.css" rel="stylesheet" type="text/css" />
    <!-- Local Bootstrap CSS -->
    <link href="~/lib/bootstrap4/css/bootstrap.min.css" rel="stylesheet">
    <!-- Local Admin CSS -->
    <link href="~/css/admin.css" rel="stylesheet" />
    <!-- Local Font Awesome -->
    <link rel="stylesheet" href="~/fontawesome-free-6.7.2-web/css/all.min.css">
</head>
<body dir="rtl">
    <header class="navbar navbar-dark bg-primary">
        <a href="/" class="navbar-brand">پنل ادمین</a>
    </header>
    <div class="container-fluid">
        <div class="row">
            <aside class="col-md-2 bg-light p-3">
                <nav>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="ManageUser/Index">مدیریت کاربران</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="Category/Index">مدیریت گروه بندی ها</a>
                        </li>
                    </ul>
                </nav>
            </aside>
            <main class="col-md-10">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white text-center p-2 mt-4">
        <p>© 2025 Admin Panel. All Rights Reserved.</p>
    </footer>

    <!-- Local jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Local Bootstrap JS (includes Popper.js) -->
    <script src="~/lib/bootstrap4/js/bootstrap.bundle.min.js"></script>
    <!-- Local SweetAlert JS -->
    <script src="~/js/sweetalert.js"></script>
    <!-- Local jQuery Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
