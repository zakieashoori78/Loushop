@page
@model Loushop.Pages.Admin.ManageUser.IndexModel

@{
    ViewData["Title"] = "مدیریت کاربران";
}


<!-- Create New Button and Search Button -->
<div class="d-flex justify-content-between mb-3">
    <a asp-page="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> ایجاد کاربر جدید
    </a>
    <input type="text" id="searchInput" class="form-control w-50" placeholder="جستجو بر اساس ایمیل یا نام کاربر..." onkeyup="searchTable()" />
</div>

<table class="table table-bordered table-striped table-hover text-center" id="usersTable">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Users[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model.Users[0].Password)</th>
            <th>@Html.DisplayNameFor(model => model.Users[0].RegisterDate)</th>
            <th>@Html.DisplayNameFor(model => model.Users[0].IsAdmin)</th>
            <th class="text-center">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            var modalId = $"modal_{item.UserId}";
            var labelId = $"modalLabel_{item.UserId}";

            <tr>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>@Html.DisplayFor(modelItem => item.RegisterDate)</td>
                <td>@Html.DisplayFor(modelItem => item.IsAdmin)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="./Edit" asp-route-id="@item.UserId" class="btn btn-warning btn-sm" title="ویرایش">
                            <i class="fas fa-edit"></i> ویرایش
                        </a>
                        <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#@modalId" title="جزئیات">
                            <i class="fas fa-info-circle"></i> جزئیات
                        </button>
                    </div>
                </td>
            </tr>

            <!-- Modal for User Details -->
            <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@labelId" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="@labelId">جزئیات کاربر: @item.Email</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
                        </div>
                        <div class="modal-body">
                            <p><strong>ایمیل:</strong> @item.Email</p>
                            <p><strong>رمز عبور:</strong> @item.Password</p>
                            <p><strong>تاریخ ثبت‌نام:</strong> @item.RegisterDate.ToString("yyyy-MM-dd")</p>
                            <p><strong>آیا ادمین است؟</strong> @(item.IsAdmin ? "بله" : "خیر")</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>

<script>
    // Function to filter table based on search input
    function searchTable() {
        var input, filter, table, tr, td, i, j, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toLowerCase();
        table = document.getElementById("usersTable");
        tr = table.getElementsByTagName("tr");

        // Loop through all table rows, and hide those who don't match the search query
        for (i = 1; i < tr.length; i++) {  // start from 1 to skip header row
            tr[i].style.display = "none";  // initially hide all rows
            td = tr[i].getElementsByTagName("td");

            for (j = 0; j < td.length; j++) {
                if (td[j]) {
                    txtValue = td[j].textContent || td[j].innerText;
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                        break; // If match is found, display the row
                    }
                }
            }
        }
    }
</script>
