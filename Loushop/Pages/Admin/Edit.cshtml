@page
@model Loushop.Pages.Admin.EditModel
@{
    ViewData["Title"] = "ویرایش";
}
<h1>ویریش کالا</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
    <dl class="dl-horizontal">
        <dd><label asp-for="Product.Name"></label></dd>
        <dt>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name"></span>
        </dt>
        <dd><label asp-for="Product.Descripthion"></label></dd>
        <dt>
            <textarea asp-for="Product.Descripthion" class="form-control"></textarea>
            <span asp-validation-for="Product.Descripthion"></span>
        </dt>
        <dd><label asp-for="Product.Price"></label></dd>
        <dt>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price"></span>
        </dt>
        <dd><label asp-for="Product.QuantityInStoke"></label></dd>
        <dt>
            <input asp-for="Product.QuantityInStoke" class="form-control" />
            <span asp-validation-for="Product.QuantityInStoke"></span>
        </dt>
        <dd><label asp-for="Product.Picture"></label></dd>
        <dt>
            <input asp-for="Product.Picture" />
            <span asp-validation-for="Product.Picture"></span>
        </dt>
        <dd>گروه</dd>
        <dt>
            @foreach (var item in Model.Product.Categories)
            {
                <p>
                    <input type="checkbox" name="selectedGroups" value="@item.Id" @((Model.GoupsProduct.Any(c => c == item.Id) ? "checked" : "")) /> @item.Name
                </p>
            }
        </dt>
        <dd></dd>
        <dd></dd>
        <dt>
            <input type="submit" class="btn btn-success" value="ثبت" />
        </dt>
    </dl>



</form>