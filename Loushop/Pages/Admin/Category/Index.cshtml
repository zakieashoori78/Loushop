@page
@model Loushop.Pages.Admin.Category.IndexModel

@{
    ViewData["Title"] = "گروه‌بندی";
}

<h1 class="text-center my-4">گروه‌بندی</h1>

<!-- Create New Button (Placed Above the Table) -->
<div class="text-end mb-3">
    <a asp-page="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> ایجاد گروه جدید
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>نام گروه</th>
                <th>توضیحات</th>
                <th class="text-center">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                var modalId = $"modal_{item.Id}";
                var labelId = $"modalLabel_{item.Id}";

                <tr>
                    <td>@item.Name</td>
                    <td>
                        @(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                    </td>
                    <td>
                        <!-- Button Group for Actions -->
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="ویرایش">
                            <i class="fas fa-edit"></i> ویرایش
                        </a>
                        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#@modalId" title="جزئیات">
                            <i class="fas fa-info-circle"></i> جزئیات
                        </button>
                    </td>
                </tr>

                <!-- Modal for Details -->
                <div class="modal fade" id="@modalId" tabindex="-1" role="dialog" aria-labelledby="@labelId" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="@labelId">جزئیات گروه: @item.Name</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="بستن">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p><strong>نام گروه:</strong> @item.Name</p>
                                <p><strong>توضیحات:</strong> @item.Description</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>
