@page
@model Loushop.Pages.Admin.Category.EditModel

@{
    ViewData["Title"] = "ویرایش گروه";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">ویرایش گروه</h1>

<h4 class="text-center">گروه بندی</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden ID -->
            <input type="hidden" asp-for="Category.Id" />

            <!-- Category Name Field -->
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label">نام گروه</label>
                <input asp-for="Category.Name" class="form-control" placeholder="نام گروه را وارد کنید" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <!-- Category Description Field -->
            <div class="form-group">
                <label asp-for="Category.Description" class="control-label">توضیحات</label>
                <input asp-for="Category.Description" class="form-control" placeholder="توضیحات گروه را وارد کنید" />
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="form-group text-center mt-3">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-page="Index" class="btn btn-outline-secondary">بازگشت به لیست</a>
</div>
